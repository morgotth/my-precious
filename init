cd $HOME/.my/

echo ">> Init/update git submodule(s)"
git submodule init
git submodule update

exports=(adb bashrc emacs gitconfig irssi pythonrc rin.sh vim vimrc zshrc)
echo ">> Link ${#exports[*]} elements."
for i in ${exports[*]};do
    target="$HOME/.$i"
    if [ -e "$target" ];then
        echo "Moving $target to /tmp/"
        mv "$target" /tmp/
    fi
    ln -s "$HOME/.my/$i" "$target"
done

cd - > /dev/null

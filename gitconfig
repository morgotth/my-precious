[alias]
	st = status -s
	ci = commit
	br = branch
	co = checkout
	sth = stash
    pr = pull --rebase

	# lg -p for changed lines, see https://coderwall.com/p/euwpig
	l = log --graph --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset %s %Cgreen(%cr) ' --abbrev-commit
	lg = log -M --decorate --graph --oneline

    # serve for read only
    serve = !git daemon --base-path=. --export-all --reuseaddr --informative-errors --verbose
    # hub for read-write 
    hub = !git daemon --base-path=. --export-all --enable=receive-pack --reuseaddr --informative-errors --verbose
    # used with git clone http://localhost:1234/

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
[merge]
